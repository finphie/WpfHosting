<Project>
  <!--
    Native AOT関連の設定
    実行ファイル作成のみに対応。（ネイティブライブラリ作成には未対応。）
    https://learn.microsoft.com/dotnet/core/deploying/native-aot/
    https://github.com/dotnet/runtime/blob/v8.0.0/src/coreclr/nativeaot/docs/optimizing.md
    https://github.com/dotnet/corert/blob/master/Documentation/using-corert/optimizing-corert.md
  -->

  <PropertyGroup>
    <!-- Native AOTを有効にする。 -->
    <PublishAot>true</PublishAot>

    <!-- シンボルをバイナリから削除する。 -->
    <StripSymbols>true</StripSymbols>

    <!-- より小さいコードサイズを優先する。 -->
    <OptimizationPreference>Size</OptimizationPreference>
    <IlcOptimizationPreference>Size</IlcOptimizationPreference>

    <!-- スタックトレースにテキスト名を提供するメタデータの生成を無効にする。 -->
    <IlcGenerateStackTraceData>false</IlcGenerateStackTraceData>

    <!-- メソッド本体の重複を排除する。 -->
    <IlcFoldIdenticalMethodBodies>true</IlcFoldIdenticalMethodBodies>

    <!-- 未処理例外のスタックトレースをコンソールに出力するコードを無効にする。 -->
    <IlcDisableUnhandledExceptionExperience>false</IlcDisableUnhandledExceptionExperience>
  </PropertyGroup>

  <!-- リフレクションなし -->
  <PropertyGroup Condition="'$(EnableReflection)' != 'true'">
    <!-- リフレクションを無効にする。 -->
    <IlcDisableReflection>true</IlcDisableReflection>

    <!-- コンパイラが未使用のコードを削除できるようにする。 -->
    <RootAllApplicationAssemblies>false</RootAllApplicationAssemblies>

    <!-- 完全な型メタデータの生成を無効にする。 -->
    <IlcGenerateCompleteTypeMetadata>false</IlcGenerateCompleteTypeMetadata>
  </PropertyGroup>

  <!-- シンボルファイルを削除する。 -->
  <Target Name="_DeleteNativeSymbolFile" AfterTargets="CopyNativeBinary">
    <PropertyGroup>
      <_PublishFilePath>$(PublishDir)/$(MSBuildProjectName)</_PublishFilePath>

      <!-- _TargetOSは発行時に内部で使用されるため注意。 -->
      <_TargetOSName Condition="$(RuntimeIdentifier.StartsWith('win'))">windows</_TargetOSName>
      <_TargetOSName Condition="$(RuntimeIdentifier.StartsWith('osx'))">osx</_TargetOSName>
      <_TargetOSName Condition="'$(_TargetOSName)' == ''">linux</_TargetOSName>
    </PropertyGroup>

    <Delete Condition="'$(Configuration)' != 'Debug' and $(_TargetOSName) == 'windows'" Files="$(_PublishFilePath).pdb" />
    <Delete Condition="'$(Configuration)' != 'Debug' and $(_TargetOSName) == 'osx'" Files="$(_PublishFilePath).dwarf" />
    <Delete Condition="'$(Configuration)' != 'Debug' and $(_TargetOSName) == 'linux'" Files="$(_PublishFilePath).dbg" />
  </Target>

  <!-- プロジェクト名.dsymディレクトリを削除する。 -->
  <Target Name="_RemoveDsymDirectory" AfterTargets="CopyNativeBinary" Condition="$(RuntimeIdentifier.StartsWith('osx')) and '$(Configuration)' != 'Debug'">
    <RemoveDir Directories="$(PublishDir)/$(MSBuildProjectName).dsym" />
  </Target>

</Project>
