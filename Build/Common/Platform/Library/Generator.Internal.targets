<Project>
  <!-- ソースジェネレーター関連の設定（NuGet非公開） -->

  <PropertyGroup>
    <!-- nullチェックは不要。 -->
    <NoWarn>$(NoWarn);CA1062</NoWarn>

    <!-- Roslynコンポーネントとして扱う。 -->
    <IsRoslynComponent>true</IsRoslynComponent>

    <!-- 一部のAPIを使用禁止にする。 -->
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
  </PropertyGroup>

  <ItemGroup>
    <!--
      Roslynパッケージを参照する。
      バージョン4.7.0は、Visual Studio 2022 バージョン 17.7以降で動作する。
      https://learn.microsoft.com/visualstudio/extensibility/roslyn-version-support
    -->
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.7.0" />
  </ItemGroup>

  <Import Project="$(MSBuildThisFileDirectory)Internal.targets" />

</Project>
