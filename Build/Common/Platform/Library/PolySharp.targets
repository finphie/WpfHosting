<Project>
  <!--
    PolySharp関連の設定
    https://github.com/Sergio0694/PolySharp
  -->

  <PropertyGroup>
    <!--
      マルチターゲットプロジェクト（.NET 8と.NET 7など）で、パッケージ検証エラーが出るため抑制する。
      出力した.NET 8アセンブリに、System.Runtime.CompilerServices.IsExternalInitが存在しないため。
    -->
    <NoWarn>$(NoWarn);CP0001</NoWarn>

    <PolySharpIncludeRuntimeSupportedAttributes>true</PolySharpIncludeRuntimeSupportedAttributes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Condition="$([MSBuild]::VersionLessThan($([MSBuild]::GetTargetFrameworkVersion('$(TargetFramework)')), '8.0'))" Include="PolySharp" Version="1.15.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
