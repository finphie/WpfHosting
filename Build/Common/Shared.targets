<Project>
  <!-- ライブラリや実行ファイル、テストプロジェクト共通の設定 -->

  <!-- 非Windows環境での、Windowsを対象とするプロジェクトの扱いに関する設定。 -->
  <PropertyGroup Condition="'$(TargetPlatformIdentifier)' == 'windows' and '$(OS)' == 'Unix'">
    <!-- Windowsを対象とするプロジェクトのビルドを行えるようにする。 -->
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
  </PropertyGroup>

  <!-- 非Windows環境での、WPF以外のWindowsを対象とするプロジェクト（WinUI/MAUIなど）のビルドはスキップする。 -->
  <Target Name="SkipCoreBuild" BeforeTargets="BeforeBuild" Condition="'$(UseWPF)' != 'true' and '$(TargetPlatformIdentifier)' == 'windows' and '$(OS)' == 'Unix'">
    <PropertyGroup>
     <CoreBuildDependsOn />
    </PropertyGroup>
  </Target>

</Project>
